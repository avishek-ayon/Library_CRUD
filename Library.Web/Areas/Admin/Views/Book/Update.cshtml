@model BookUpdateModel
@{
    ViewData["Title"] = "Update Book";
}



<div class="container-fluid">
    <div class="row">
        <!-- /.left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Update Book</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" asp-antiforgery="true" asp-action="Update"
                      asp-area="Admin" asp-controller="Book" method="post">
                    <input type="hidden" asp-for="Id" />


                    <div class="card-body">
                        <div asp asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>


                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
            <!-- /.card -->

        </div>
        <!--/.col(left) -->
    </div>
    <!-- /.row  -->
</div>
<!-- /.container-fluid -->
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    }
